{
  "name": "denon-proxy",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "src/proxy.js",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "eslint": "eslint ./src --max-warnings 0",
    "lint": "npm run eslint -- --fix & npm run stylelint -- --fix",
    "printrules": "eslint --print-config $1 > printrules.json",
    "stylelint": "stylelint \"./src/frontend/**/*.css\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lakebeach/denon-proxy.git"
  },
  "keywords": [
    "denon",
    "api",
    "rest",
    "websockets"
  ],
  "author": "lakebeach",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lakebeach/denon-proxy/issues"
  },
  "homepage": "https://github.com/lakebeach/denon-proxy#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "4.18.2",
    "ws": "8.11.0"
  },
  "devDependencies": {
    "autoprefixer": "10.4.13",
    "eslint": "8.30.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-solid": "0.9.1",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "postcss": "8.4.20",
    "solid-js": "1.6.6",
    "stylelint": "14.16.0",
    "stylelint-config-recommended": "9.0.0",
    "stylelint-config-tailwindcss": "0.0.7",
    "tailwindcss": "3.2.4",
    "vite": "4.0.3",
    "vite-plugin-solid": "2.5.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:solid/recommended"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "plugins": ["solid"],
    "root": true,
    "globals": {
      "process": "readonly"
    },
    "rules": {
      "quotes": ["error", "single"]
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx}": [
      "eslint ./src --max-warnings 0 --fix"
    ],
    "./src/frontend/**/*.css": [
      "stylelint \"./src/frontend/**/*.css\" --fix"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-tailwindcss"
    ]
  }
}
